@using Coditech.ViewModel
@model ProductMasterListViewModel
@{
    ViewBag.Title = "Product List";
    string actionName = ViewContext.Controller.ValueProvider.GetValue("action").RawValue.ToString();
    string controllerName = ViewContext.RouteData.Values["controller"].ToString();
}
<div class="container-fluid listing-wrapper mt-4 main-content-wrapper">
    <div class="row">
        <div class="col-lg-12 d-flex align-items-center justify-content-center right-side">
            <div class="list-wrapper">
                <div class="align-items-center d-flex justify-content-between wrapper-header mb-3">
                    <h1 class="text-center font-poppins">Product List</h1>
                    <a class="btn btn-set-default add-new-product base-font-size" href="../@controllerName/Create">
                        <i class="fa fa-plus-circle"></i> Add New Product
                    </a>
                </div>
                <div class="table-responsive table-wrapper">
                    <table class="table table-striped table-bordered" id="ProductTableId">
                        <thead>
                            <tr>
                                <th>Product Name</th>
                                <th>Product Unique Code</th>
                                <th>File Name</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model?.ProductMasterList?.Count > 0)
                            {
                                foreach (ProductMasterViewModel item in Model.ProductMasterList)
                                {
                                    <tr>
                                        <td>@item.ProductName</td>
                                        <td>@item.ProductUniqueCode</td>
                                        <td>@item.FileName</td>
                                        <td>
                                            <div class="align-items-center d-flex justify-content-around action-container">
                                                <a href="../@controllerName/Edit?productMasterId=@item.ProductMasterId" class="action-icon edit-product" title="Edit"><i class="fa fa-pencil" aria-hidden="true"></i></a>
                                                <a href="../@controllerName/DownloadUserManual?productuniquecode=@item.ProductUniqueCode" class="action-icon upload-product" title="download user manual"><i class="fa fa-download" aria-hidden="true"></i></a>
                                                <a href="../@controllerName/Delete?productMasterIds=@item.ProductMasterId" class="action-icon delete-product" title="Delete"><i class="fa fa-trash" aria-hidden="true"></i></a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
